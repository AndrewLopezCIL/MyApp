<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Top 3 VR Headset</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/VRLayout.css")


    <style>
        body {
            padding-top: 0px;
        }

        .navbar a:link {
            color: white;
        }

        .navbar a:visited {
            color: silver;
        }

        .navbar a:hover {
            color: cadetblue;
            text-shadow: 1px 1px white;
            transition: 1s;
            text-decoration: none;
            font-size: 1.2em;
        }
    </style>
</head>
<body>
     
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <a class="navbar-brand" href="#">MVC Test Company</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item nav-link">
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="nav-item nav-link">
                    @Html.ActionLink("About", "About", "Home")
                </li>
                <li class="nav-item nav-link">
                    @Html.ActionLink("Contact", "Contact", "Home")
                </li>
                <li class="nav-item nav-link">
                    @Html.ActionLink("Top 3 VR Headsets", "Index", "VR")
                </li>
                <li class="nav-item nav-link">
                    @Html.ActionLink("Buy VR", "WhereToBuy", "VR")
                </li>
            </ul>
        </div>
    </nav>
    <section>

        <hr />
        <br />
        <form name="buyingHeadsets" method="post">
            <p>
                Select which headset you want:
                <select name="headsets" id="headsets">
                    <option value=""></option>
                    <option value="Valve Index">Valve Index</option>
                    <option value="HTCVive">HTC Vive</option>
                    <option value="Oculus: Rift S">Oculus: Rift S</option> 
                </select>
                </p>
            <button type="submit">Submit</button>
        </form>
        <br />
       
    </section>

